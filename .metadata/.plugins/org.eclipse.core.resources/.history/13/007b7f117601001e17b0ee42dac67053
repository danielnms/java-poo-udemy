package estrutura_condicional;

public class Main {

	public static void main(String[] args) {
	
		// Declaracoes
		int x = 5;
		
		// Condicao simples
		if(x > 0) {
			System.out.println("Hello World!");
		}
	
		// Condicao composta
		if(x < 0) {
			System.out.println("Hello World!");
		} else{
			System.out.println("Erro!");
		}
	
	
	}

}
